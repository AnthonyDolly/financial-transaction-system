# CONFIGURACIÓN DE PRODUCCIÓN
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1
DEFAULT_PASSWORD=DEFAULT_PASSWORD

# Base de datos PostgreSQL
POSTGRES_DB=financial_system_prod
POSTGRES_USER=financial_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5433
DATABASE_URL=postgresql://financial_user:your_secure_password_here@postgres:5432/financial_system_prod

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRE_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_at_least_32_characters_long
JWT_REFRESH_EXPIRE_IN=30d

# Seguridad
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error
LOG_FILE=logs/app.log

# Swagger
SWAGGER_TITLE=Financial Transaction System API
SWAGGER_DESCRIPTION=API para sistema de transacciones financieras
SWAGGER_VERSION=1.0.0

# Desarrollo
ENABLE_CORS=true
TRUST_PROXY=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Nginx
NGINX_PORT=80
NGINX_PORT_SSL=443

SWAGGER_CONTACT_NAME=YOUR_NAME
SWAGGER_CONTACT_EMAIL=YOUR_EMAIL
AZURE_APP_NAME=financial-transaction-system
